<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="60dp"
    android:weightSum="5"

    android:background="@color/cardview_light_background"
    android:layout_height="wrap_content">

    <!--Home-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/home_menu"
        android:background="?selectableItemBackground"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/home_icon"
            android:src="@drawable/ic_home_black_48dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="Home"
            android:textColor="@color/black_900"
            style="@style/drawer_text_view"

            android:layout_below="@+id/home_icon"

            android:layout_height="40dp" />
    </RelativeLayout>

    <!--Report-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
android:id="@+id/report_menu"
        android:layout_height="0dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Report"
            android:gravity="center"
            android:textColor="@color/black_900"
            android:layout_below="@+id/report_icon"
            android:layout_height="40dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/report_icon"
            android:src="@drawable/ic_assessment_black_24dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <!--Test Icon-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/test_menu"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/write_test_icon"

            android:src="@drawable/ic_assignment_black_48dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="Test"
            android:textColor="@color/black_900"
            style="@style/drawer_text_view"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/write_test_icon"
            android:layout_height="40dp" />
    </RelativeLayout>

    <!--TestReport-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/test_report_menu"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/see_test_reports_icon"
            android:src="@drawable/ic_assignment_black_48dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="Home"
            style="@style/drawer_text_view"
            android:gravity="center"
            android:textColor="@color/black_900"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/see_test_reports"
            android:layout_height="40dp" />
    </RelativeLayout>

    <!--Payments-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/payments_menu"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/payments_icon"
            android:src="@drawable/ic_home_black_48dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="Payments"
            style="@style/drawer_text_view"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/payments_icon"
            android:layout_height="40dp" />
    </RelativeLayout>



</LinearLayout>