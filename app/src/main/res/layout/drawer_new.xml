<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="60dp"

    android:layout_centerVertical="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginStart="2dp"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="5"
    android:layout_gravity="center_vertical"


    android:layout_height="match_parent">

    <!--Home-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/home_menu"


        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/home_icon"
            android:background="?selectableItemBackground"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_home_ih_36"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:text="Home"

            android:background="?selectableItemBackground"
            android:textColor="@color/pink900"

            android:gravity="center"
            android:layout_below="@+id/home_icon"

            android:layout_height="40dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_viewpager"
        />

    <!--Report-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/report_menu"

        android:layout_height="0dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Report"
            android:gravity="center"
            android:textColor="@color/material_orange600"

            android:layout_below="@+id/report_icon"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/report_icon"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_new_test_ih_24"
            android:background="?selectableItemBackground"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_viewpager"
        />

    <!--Test Icon-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"

        android:id="@+id/test_menu"
        android:layout_height="0dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Test"

            android:textColor="@color/material_yellow600"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/write_test_icon"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/write_test_icon"
            android:layout_marginTop="6dp"
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_pay_new_ih_24"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_viewpager"
        />

    <!--TestReport-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/test_report_menu"
        android:layout_height="0dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Test Reports"
            android:textColor="@color/material_indigo600"

            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/wrtin_test_menu"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/wrtin_test_menu"
            android:src="@drawable/ic_noti_ih_24"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="?selectableItemBackground"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_viewpager"
        />
    <!--Payments-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/payments_menu"
        android:layout_height="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="Payments"

            android:textColor="@color/material_green600"
            style="@style/drawer_text_view"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/payments_icon"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/payments_icon"
            android:src="@drawable/ic_pay_ih_24_new"
            android:layout_height="40dp"
            android:background="?selectableItemBackground"
            android:layout_marginTop="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</LinearLayout>
</android.support.v7.widget.CardView>