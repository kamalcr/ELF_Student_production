<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_marginLeft="1dp"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="5"


    android:layout_height="match_parent">

    <!--Home-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/home_menu"
        android:background="?selectableItemBackground"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/home_icon"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_inhome_ih_36"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:text="Home"
            android:textColor="@color/white_light"
            style="@style/drawer_text_view"
            android:gravity="center"
            android:layout_below="@+id/home_icon"

            android:layout_height="40dp" />
    </RelativeLayout>

    <!--Report-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
android:id="@+id/report_menu"
        android:layout_height="0dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Report"
            android:gravity="center"
            android:textColor="@color/white_light"
            android:layout_below="@+id/report_icon"
            android:layout_height="40dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/report_icon"
            android:src="@drawable/ic_reprt_ih_36"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <!--Test Icon-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/test_menu"
        android:layout_height="0dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Test"
            android:textColor="@color/white_light"
            style="@style/drawer_text_view"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/write_test_icon"
            android:layout_height="40dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/write_test_icon"

            android:src="@drawable/ic_home_ih_36"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <!--TestReport-->

    <RelativeLayout
        android:layout_width="match_parent"

        android:id="@+id/test_report_menu"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/see_test_reports_icon"
            android:src="@drawable/ic_assignment_black_48dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="Home"
            style="@style/drawer_text_view"
            android:gravity="center"
            android:textColor="@color/black_900"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/see_test_reports"
            android:layout_height="40dp" />
    </RelativeLayout>

    <!--Payments-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/payments_menu"
        android:layout_height="0dp">>
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/payments_icon"
            android:src="@drawable/ic_pay_ih_36"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="Payments"
            android:textColor="@color/white_light"
            style="@style/drawer_text_view"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/payments_icon"
            android:layout_height="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/written_test_menu"
        android:layout_height="0dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Test Reports"
            android:textColor="@color/white_light"
            style="@style/drawer_text_view"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/wrtin_test_menu"
            android:layout_height="40dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/wrtin_test_menu"
            android:src="@drawable/ic_pay_ih_36"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>



</LinearLayout>
</android.support.v7.widget.CardView>