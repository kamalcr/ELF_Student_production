<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_height="match_parent"
    android:layout_width="100dp"
    android:background="@null"
    android:layout_centerVertical="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"

    android:layout_marginLeft="2dp"
    android:layout_marginStart="2dp"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="4dp"

    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="5"

    android:layout_gravity="center_vertical"


    android:layout_height="match_parent">



    <!--Home-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/home_menu"
        style="@style/drawer_card"



        android:layout_height="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/home_icon"
                android:background="?selectableItemBackground"
                style="@style/drawer_image_view"
                app:srcCompat = "@drawable/home_drawer"
                android:layout_height="match_parent"

               />




    </android.support.v7.widget.CardView>




    <!--Report-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="4dp"
        style="@style/drawer_card"

        android:id="@+id/report_menu"
        android:layout_height="0dp">
        <FrameLayout
            android:layout_width="match_parent"

            android:background="?selectableItemBackground"


            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/report_icon"
                app:srcCompat = "@drawable/report"
                android:layout_height="match_parent"
                style="@style/drawer_image_view"
               />

        </FrameLayout>
    </android.support.v7.widget.CardView>



    <!--Test Icon-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/test_menu"
        style="@style/drawer_card"

        android:layout_height="0dp">
        <FrameLayout
            android:layout_width="match_parent"

            android:background="?selectableItemBackground"


            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/write_test_icon"

                app:srcCompat="@drawable/take_test_drawer"
                android:layout_height="match_parent"
                style="@style/drawer_image_view"
                android:layout_above="@+id/drawer_test_icon" />


        </FrameLayout>
    </android.support.v7.widget.CardView>



    <!--TestReport-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/test_report_menu"
        style="@style/drawer_card"

        android:layout_height="0dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:background="?selectableItemBackground"

            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/wrtin_test_menu"
                app:srcCompat = "@drawable/tak_summ"
                android:layout_height="match_parent"

                style="@style/drawer_image_view"
                />



        </FrameLayout>
        </android.support.v7.widget.CardView>


    <!--Payments-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/payments_menu"
        style="@style/drawer_card"


        android:layout_height="0dp">
        <FrameLayout
            android:layout_width="match_parent"

            android:background="?selectableItemBackground"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/payments_icon"
                app:srcCompat="@drawable/sub_drawer"
                android:layout_height="match_parent"
                android:layout_above="@+id/drawer_payments_text"

                style="@style/drawer_image_view" />



        </FrameLayout>       
        </android.support.v7.widget.CardView>



</LinearLayout>
</android.support.v7.widget.CardView>