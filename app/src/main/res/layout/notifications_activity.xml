<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar_new"
            android:id="@+id/noti_toolbar"/>
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/noti_content_root"
            android:layout_height="match_parent">


            <com.elf.elfstudent.CustomUI.HelviticaLight
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="30sp"
                android:gravity="center"
                android:id="@+id/noti_title"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="98dp" />

            <com.elf.elfstudent.CustomUI.HelviticaLight
                android:text="No Request from Parents or Staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"

                android:layout_marginTop="72dp"
                android:id="@+id/textView3"
                android:layout_below="@+id/noti_title"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <FrameLayout
            android:layout_width="60dp"
            android:id="@+id/notti_drawer_frame"
            android:layout_height="wrap_content">
            <include layout="@layout/drawer_new"/>
        </FrameLayout>
    </FrameLayout>


</android.support.design.widget.CoordinatorLayout>