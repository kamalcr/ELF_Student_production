<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"


    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.elf.elfstudent.CustomUI.HelviticaLight
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textColor="@color/material_grey800"
            android:gravity="center_vertical|start"
            android:textSize="@dimen/question_text_size"
            android:text="This sis a aquestion a really a big question please make sure to add left or roght and tutorila by today"
            android:id="@+id/test_question_text"
            android:layout_marginTop="@dimen/que_mtop"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="24dp"
            android:layout_alignLeft="@+id/test_question_text"
            android:layout_alignRight="@+id/test_question_text"
            android:layout_below="@+id/test_question_text"
            android:id="@+id/question_div"
            android:background="@drawable/rect_round_corners_bck"
            />



        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:weightSum="4"
            android:layout_below="@+id/question_div"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="@dimen/opt_mtop"
            android:id="@+id/test_radio_group"
            android:orientation="vertical"
            >
            <RadioButton
                android:layout_width="match_parent"
                android:layout_weight="1"
                style="@style/custom_radio_button"
                android:id="@+id/test_radio_opta"
                android:layout_height="0dp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_weight="1"

                style="@style/custom_radio_button"
                android:id="@+id/test_radio_optb"
                android:layout_height="0dp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_weight="1"
                style="@style/custom_radio_button"
                android:id="@+id/test_radio_optc"
                android:layout_height="0dp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_weight="1"
                style="@style/custom_radio_button"
                android:id="@+id/test_radio_optd"
                android:layout_height="0dp" />




        </RadioGroup>


    </RelativeLayout>


</FrameLayout>
    </ScrollView>