<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="12dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.elf.elfstudent.CustomUI.HelviticaMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SELECT BOARD"
            android:id="@+id/ins_board_text"
            android:layout_marginTop="40dp"
            android:textColor="@color/black_900"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/board_spinner"
            android:layout_alignStart="@+id/board_spinner" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/board_spinner"
            android:layout_below="@+id/ins_board_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" />

        <com.elf.elfstudent.CustomUI.HelviticaMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SELECT STATE"
            android:id="@+id/ins_dist_text"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/board_spinner"
            android:layout_alignLeft="@+id/ins_board_text"
            android:layout_alignStart="@+id/ins_board_text"
            android:textColor="@color/black_900" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ins_state_actext"
            android:layout_below="@+id/ins_dist_text"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@+id/board_spinner"
            android:layout_alignStart="@+id/board_spinner"
            android:layout_alignRight="@+id/board_spinner"
            android:layout_alignEnd="@+id/board_spinner"
            android:spinnerMode="dialog" />

        <com.elf.elfstudent.CustomUI.HelviticaMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="INSTITUTION NAME"
            android:id="@+id/ins_ins_name"
            android:layout_below="@+id/ins_state_actext"
            android:layout_alignLeft="@+id/ins_dist_text"
            android:layout_alignStart="@+id/ins_dist_text"
            android:layout_marginTop="16dp"
            android:textColor="@color/black_900" />

        <com.elf.elfstudent.CustomUI.CustomAutcomplete
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ins_school_ac_text"
            android:layout_below="@+id/ins_ins_name"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@+id/ins_state_actext"
            android:layout_alignStart="@+id/ins_state_actext"
            android:layout_alignRight="@+id/textView25"
            android:layout_alignEnd="@+id/textView25" />
        <ProgressBar
            android:id="@+id/pb_loading_indicator"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:visibility="visible"
            android:layout_alignTop="@+id/ins_school_ac_text"
            android:layout_toRightOf="@+id/ins_school_ac_text"
            android:layout_above="@+id/ins_finish_button"
            android:layout_alignRight="@+id/ins_state_actext"
            android:layout_alignEnd="@+id/ins_state_actext" />

        <com.elf.elfstudent.CustomUI.HelviticaMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter You Institution Details.."
            android:id="@+id/textView25"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/ins_board_text"
            android:layout_alignStart="@+id/ins_board_text"
            android:layout_marginTop="12dp"
            android:textSize="22sp"
            android:layout_marginRight="12dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:id="@+id/ins_finish_button"
            android:layout_below="@+id/ins_school_ac_text"
            android:layout_marginTop="53dp"
            android:layout_alignLeft="@+id/ins_school_ac_text"
            android:layout_alignStart="@+id/ins_school_ac_text"
            android:layout_alignRight="@+id/ins_school_ac_text"
            android:layout_alignEnd="@+id/ins_school_ac_text" />

    </RelativeLayout>

</android.support.v7.widget.CardView>