<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.elf.elfstudent.CustomUI.HelviticaLight
        android:text="Provide you Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:id="@+id/pass_ph_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Your Mobile Number"
        android:minHeight="60dp"
        android:background="@drawable/rect_round_corners"
        android:id="@+id/phone_ed"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_settings_phone_black_24dp"
        android:layout_below="@+id/pass_ph_text"
        android:layout_marginTop="24dp"
        android:id="@+id/pass_phone_icon"
        android:layout_alignLeft="@+id/pass_ph_text"
        android:layout_alignStart="@+id/pass_ph_text"
        android:layout_above="@+id/phone_ed"
        android:layout_alignRight="@+id/pass_ph_text"
        android:layout_alignEnd="@+id/pass_ph_text" />

    <Button
        android:text="Save Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:id="@+id/save_num_button" />
</RelativeLayout>