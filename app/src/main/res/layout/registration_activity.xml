<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/register_toolbar"
            android:layout_height="?attr/actionBarSize">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

      <FrameLayout
          android:layout_width="wrap_content"
          android:background="@color/black_viewpager"
          android:layout_height="match_parent">
          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              app:cardBackgroundColor="@color/white"
              android:layout_margin = "32dp"
              app:cardCornerRadius="16dp"
              android:layout_height="match_parent">

              <RelativeLayout
                  app:layout_behavior="@string/appbar_scrolling_view_behavior"

                  android:layout_width="match_parent" android:layout_height="match_parent">


                  <android.support.design.widget.TextInputLayout
                      android:layout_width="match_parent"
                      android:id="@+id/nregister_phone"
                      android:layout_height="60dp"
                      android:layout_marginRight="20dp"
                      android:hint="Phone Number"
                      style = "@style/register_page_text_layout"
                      android:background="@drawable/personal_info_editext"
                      android:textColorHint="@color/white_light"
                      android:textColor="@color/white_light"
                      android:layout_below="@+id/nregister_pass"
                      android:layout_marginTop="35dp"

                      android:layout_alignLeft="@+id/nregister_pass"
                      android:layout_alignStart="@+id/nregister_pass">

                      <com.elf.elfstudent.CustomUI.IosLightEditText
                          android:layout_width="match_parent"
                          android:background="@null"
                          android:paddingLeft="16dp"
                          android:gravity="center_vertical"
                          android:layout_height="match_parent" />
                  </android.support.design.widget.TextInputLayout>

                  <Button
                      android:layout_width="120dp"
                      android:layout_height="60dp"
                      android:layout_marginBottom="25dp"
                      android:text="Next"
                      android:padding="4dp"
                      android:id="@+id/nregister_submit"
                      android:layout_alignParentBottom="true"
                      android:layout_alignRight="@+id/nregister_phone"
                      android:layout_alignEnd="@+id/nregister_phone" />

                  <android.support.design.widget.TextInputLayout
                      android:layout_width="match_parent"
                      android:id="@+id/nregister_pass"
                      android:layout_height="60dp"
                      android:hint="Password"
                      style = "@style/register_page_text_layout"
                      android:background="@drawable/personal_info_editext"
                      android:textColorHint="@color/white_light"
                      android:textColor="@color/white_light"
                      android:layout_marginTop="38dp"
                      android:layout_marginLeft="20dp"
                      android:layout_below="@+id/nregister_name"
                      android:layout_alignRight="@+id/nregister_name"
                      android:layout_alignEnd="@+id/nregister_name">

                      <com.elf.elfstudent.CustomUI.IosLightEditText
                          android:layout_width="match_parent"
                          android:background="@null"

                          android:paddingLeft="16dp"
                          android:gravity="center_vertical"
                          android:layout_height="match_parent" />
                  </android.support.design.widget.TextInputLayout>

                  <android.support.design.widget.TextInputLayout
                      android:layout_width="match_parent"
                      android:id="@+id/nregister_name"
                      android:layout_height="60dp"
                      android:hint="Name"

                      style = "@style/register_page_text_layout"
                      android:textColorHint="@color/white_light"
                      android:textColor="@color/white_light"
                     android:background="@drawable/personal_info_editext"
                      android:layout_marginTop="206dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentEnd="true"
                     >

                      <com.elf.elfstudent.CustomUI.IosLightEditText
                          android:layout_width="match_parent"
                          android:background="@null"
                          android:textColorHint="@color/white_light"
                          android:textColor="@color/white_light"
                          android:paddingLeft="16dp"
                          android:gravity="center_vertical"
                          android:layout_height="match_parent" />
                  </android.support.design.widget.TextInputLayout>


              </RelativeLayout>
          </android.support.v7.widget.CardView>
      </FrameLayout>

</android.support.design.widget.CoordinatorLayout>