<?xml version="1.0" encoding="utf-8"?>


<FrameLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/register_back_image"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/profile_root"

        android:layout_height="match_parent">


        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_below="@+id/name_text"
            android:maxLines="1"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:id="@+id/nregister_name"
            android:layout_marginRight="16dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/name_imageview"
            android:layout_alignStart="@+id/name_imageview" />


        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_below="@+id/phone_number_text"
            android:layout_marginTop="4dp"
            android:inputType="number"
            android:textColor="@color/white"
            android:id="@+id/nregister_phone"
            android:layout_marginRight="16dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/nregister_pass"
            android:layout_alignStart="@+id/nregister_pass" />

        <com.elf.elfstudent.CustomUI.QucikSand
            android:layout_width="wrap_content"
            android:text="PASSWORD"
            android:id="@+id/passtext"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/password_imageview"
            android:textColor="@color/material_pink500"
            android:layout_below="@+id/nregister_name"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/password_imageview"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:id="@+id/textView6" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/name_text"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:id="@+id/name_imageview" />

        <com.elf.elfstudent.CustomUI.QucikSand
            android:layout_width="wrap_content"
            android:text="NAME"
            android:id="@+id/name_text"
            android:textSize="20sp"
            android:textColor="@color/material_pink500"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/register_margin_top"

            android:layout_toRightOf="@+id/name_imageview"
            android:layout_toEndOf="@+id/name_imageview" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/password_imageview"
            android:layout_below="@+id/nregister_name"
            android:layout_alignLeft="@+id/nregister_name"
            android:layout_alignStart="@+id/nregister_name"
            android:layout_toLeftOf="@+id/name_text"
            android:layout_toStartOf="@+id/name_text" />

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:id="@+id/nregister_pass"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:layout_below="@+id/password_imageview"
            android:layout_alignLeft="@+id/password_imageview"
            android:layout_alignStart="@+id/password_imageview" />

        <com.elf.elfstudent.CustomUI.QucikSand
            android:layout_width="wrap_content"
            android:text="PHONE NUMBER"
            android:id="@+id/phone_number_text"
            android:textSize="20sp"
            android:textColor="@color/material_pink500"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:layout_below="@+id/nregister_pass"
            android:layout_toRightOf="@+id/password_imageview"
            android:layout_toEndOf="@+id/password_imageview" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/phone_number_text"
            android:layout_alignRight="@+id/password_imageview"
            android:layout_alignEnd="@+id/password_imageview"
            android:id="@+id/phone_imageview" />

        <ImageButton

            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@null"
            android:id="@+id/nregister_submit"
            android:layout_marginTop="30dp"

            android:layout_below="@+id/nregister_phone"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</FrameLayout>