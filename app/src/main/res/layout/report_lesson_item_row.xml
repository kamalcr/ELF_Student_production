<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="2dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout android:layout_width="match_parent"
        android:background="?selectableItemBackground"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp">


            <com.elf.elfstudent.CustomUI.UbuntuRegular
                android:text="Lesson Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/material_grey800"
                 android:textSize="@dimen/lesson_item_text_size"
               android:paddingLeft="16dp"
                android:gravity="start|left|center_vertical"
                android:paddingStart="16dp"
                android:paddingRight="6dp"
                android:minHeight="80dp"
                android:paddingEnd="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/report_frag_lesson_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/report_frag_growth"
                android:layout_toLeftOf="@+id/report_frag_growth" />

        <com.elf.elfstudent.CustomUI.QucikSand
            android:text="55"
            android:layout_width="wrap_content"
            android:textSize="@dimen/lesson_item_text_size"
            android:layout_marginRight="37dp"
            android:layout_height="wrap_content"

             android:padding="16dp"

            android:textColor="@color/black_900"
            android:gravity="start|left|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:id="@+id/report_frag_growth"
            android:layout_above="@+id/view"
            android:layout_alignParentTop="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/view"
            android:layout_below="@id/report_frag_lesson_name"
            android:background="@drawable/rect_round_corners_bck"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/view"
            android:background="#fee7e7"
            android:layout_height="wrap_content">
            <com.elf.elfstudent.CustomUI.UbuntuRegular
                android:text="Correct Answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"

                android:layout_alignTop="@+id/textView33"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/textView35" />
            <TextView
                android:text="55"
                android:layout_width="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/material_pink500"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:id="@+id/report_item_total_ques" />

            <com.elf.elfstudent.CustomUI.UbuntuRegular
                android:text="Questions Asked"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView33"
                android:paddingLeft="16dp"
                android:layout_below="@+id/report_item_total_ques"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/textView35"
                android:layout_toStartOf="@+id/textView35" />

            <TextView
                android:text="35"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/report_item_ans_correct"
                android:layout_alignBaseline="@+id/report_item_total_ques"
                android:layout_alignBottom="@+id/report_item_total_ques"
                android:layout_alignRight="@+id/textView35"
                android:layout_alignEnd="@+id/textView35"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp" />

        </RelativeLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>



