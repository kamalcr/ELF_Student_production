<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <com.elf.elfstudent.CustomUI.HelviticaLight
            android:layout_width="wrap_content"
            android:text="Lesson Name"
            android:textColor="@color/white_primary"
            android:id="@+id/lesson_name_item"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|start"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="22sp"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/lesson_growth"
            android:layout_toStartOf="@+id/lesson_growth" />

        <com.elf.elfstudent.CustomUI.HelviticaLight
            android:layout_width="@dimen/growth_width"
            android:text="52%"
            android:textColor="@color/white_primary"

            android:id="@+id/lesson_growth"
            android:layout_height="50dp"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

