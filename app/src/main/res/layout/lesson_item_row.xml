<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="120dp"
    android:background="@color/white_light"

    xmlns:android="http://schemas.android.com/apk/res/android">
        <com.elf.elfstudent.CustomUI.HelviticaLight
            android:layout_width="wrap_content"
            android:text="Lesson Name"
            android:minHeight="60dp"
            android:textColor="@color/material_black"
            android:id="@+id/lesson_name_item"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|start"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="@dimen/lesson_item_text_size"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/lesson_growth"
            android:layout_toStartOf="@+id/lesson_growth" />

        <com.elf.elfstudent.CustomUI.HelviticaLight
            android:layout_width="@dimen/growth_width"
            android:text="52%"
            android:textColor="@color/black_900"

            android:id="@+id/lesson_growth"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lesson_item_text_size"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/report_correct_ans" />

    <TextView
        android:text="Questions Asked :"
        android:layout_width="wrap_content"
        android:textColor="@color/black_900"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lesson_name_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView" />

    <TextView
        android:text="Answered Correct : "
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_900"
        android:textSize="14sp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/textView5" />

    <TextView
        android:text="55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_black"
        android:textSize="14sp"

        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:id="@+id/report_total_ques" />

    <TextView
        android:text="36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textColor="@color/material_black"
        android:layout_below="@+id/report_total_ques"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@+id/report_total_ques"
        android:layout_alignStart="@+id/report_total_ques"
        android:id="@+id/report_correct_ans" />

</RelativeLayout>

