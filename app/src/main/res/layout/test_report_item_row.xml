<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.elf.elfstudent.CustomUI.HelviticaLight
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:text="Test No"
            android:id="@+id/test_report_item_test_desc"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content" />

        <com.elf.elfstudent.CustomUI.HelviticaMedium
            android:text="78"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="30sp"
            android:id="@+id/test_item_overall"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <com.elf.elfstudent.CustomUI.HelviticaLight
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:id="@+id/test_report_item_sub_name"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>