<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:alpha="0.9"
    android:background="@drawable/login_background_gradient"
    android:layout_marginTop="4dp"
    android:id="@+id/home_holder_root"
    android:padding="4dp"
    style="@style/cv_elevation"
    android:layout_height="120dp"
    android:paddingTop="16dp"
    android:paddingBottom="8dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitEnd"

            android:id="@+id/home_card_sub_imageview"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"


            android:layout_height="match_parent">


            <com.elf.elfstudent.CustomUI.HelviticaLight
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/subject_title"
                android:layout_weight="1"
                android:text="Phsyics"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/white_primary"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <com.elf.elfstudent.CustomUI.HelviticaLight
                android:text="Overall Percetage"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_orange400"
                android:layout_below="@+id/subject_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView32" />

            <com.elf.elfstudent.CustomUI.HelviticaLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Percent"
                android:textColor="@color/white_primary"
                android:id="@+id/percent"
                android:gravity="center"
                android:textSize="24sp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_above="@+id/textView32"
                android:layout_alignLeft="@+id/textView32"
                android:layout_alignStart="@+id/textView32" />


        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
