<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"

    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:alpha="0.9"
    android:layout_marginBottom="12dp"
   app:cardBackgroundColor="@color/black_dribble"
    android:layout_marginTop="12dp"
    android:id="@+id/home_holder_root"
    android:padding="4dp"
    style="@style/cv_elevation"
    android:layout_height="120dp"
    android:paddingTop="16dp"
    android:paddingBottom="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/home_card_sub_imageview"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"


            android:layout_height="match_parent">


            <com.elf.elfstudent.CustomUI.HelviticaLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Percent"
                android:textColor="@color/white"
                android:id="@+id/percent"
                android:gravity="center"

                android:textSize="@dimen/home_text_size_center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp" />


        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
