<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:alpha="0.9"
    android:background="@drawable/login_background_gradient"
    android:layout_marginTop="4dp"
    android:id="@+id/home_holder_root"
    android:padding="4dp"
    style="@style/cv_elevation"
    android:layout_height="120dp"
    android:paddingTop="16dp"
    android:paddingBottom="8dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitEnd"

            android:id="@+id/home_card_sub_imageview"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"


            android:layout_height="match_parent">


            <com.elf.elfstudent.CustomUI.HelviticaLight
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/subject_title"
                android:layout_weight="1"
                android:text="Phsyics"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/white_primary"
                android:layout_marginRight="32dp"
                android:layout_marginEnd="32dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView3"
                android:layout_toStartOf="@+id/imageView3" />

            <com.elf.elfstudent.CustomUI.HelviticaLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Percent"
                android:textColor="@color/white_primary"
                android:id="@+id/percent"
                android:gravity="center"
                android:textSize="24sp"

                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_alignBaseline="@+id/subject_title"
                android:layout_alignBottom="@+id/subject_title"
                android:layout_toLeftOf="@+id/subject_title"
                android:layout_toStartOf="@+id/subject_title"
                android:layout_marginRight="49dp"
                android:layout_marginEnd="49dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView3"
                app:srcCompat="@drawable/ic_info_black_36px"
                android:backgroundTintMode="add"
                android:backgroundTint="@color/puprle"
                android:padding="4dp"
                android:layout_marginRight="9dp"
                android:layout_marginEnd="9dp"
                android:layout_above="@+id/subject_title"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
