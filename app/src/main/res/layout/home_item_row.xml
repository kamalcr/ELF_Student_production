<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:alpha="0.9"
    android:layout_marginTop="4dp"
    android:id="@+id/home_holder_root"
    android:padding="4dp"
    style="@style/cv_elevation"
    android:layout_height="120dp"
    android:paddingTop="16dp"
    android:paddingBottom="8dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/ic_lightbulb"
            android:id="@+id/home_card_sub_imageview"
            android:layout_height="match_parent" />
        <View
            android:layout_width="match_parent"
            android:background="@color/md_blue_100"
            android:alpha="0.6"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"


            android:layout_height="match_parent">


            <com.elf.elfstudent.CustomUI.HelviticaLight
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/subject_title"
                android:layout_weight="1"
                android:text="Phsyics"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/md_black_1000"


                android:layout_alignLeft="@+id/textView26"
                android:layout_alignStart="@+id/textView26" />

            <com.elf.elfstudent.CustomUI.HelviticaLight
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Percent"
                android:textColor="@color/md_black_1000"
                android:id="@+id/percent"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:textSize="24sp"

                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

            <com.elf.elfstudent.CustomUI.HelviticaLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Saturday , 25 jan"
                android:id="@+id/textView23"
                android:textColor="@color/abc_tint_default"
                android:layout_marginBottom="31dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/textView26"
                android:layout_alignStart="@+id/textView26" />

            <com.elf.elfstudent.CustomUI.HelviticaLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Last Written Test On"
                android:textColor="@color/md_blue_grey_900"

                android:id="@+id/textView26"
                android:layout_above="@+id/textView23"
                android:layout_toRightOf="@+id/percent"
                android:layout_toEndOf="@+id/percent"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_info_black_36px"
                android:backgroundTintMode="add"
                android:backgroundTint="@color/puprle"
                android:layout_alignTop="@+id/subject_title"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:padding="4dp" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock_outline_black_24px"
                android:id="@+id/button4"
                android:layout_below="@+id/textView26"
                android:layout_alignRight="@+id/imageView3"
                android:layout_alignEnd="@+id/imageView3"
                android:padding="8dp" />


        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
