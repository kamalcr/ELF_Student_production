<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="1dp"
    app:cardPreventCornerOverlap="true"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <com.elf.elfstudent.CustomUI.HelviticaLight
            android:text="Topic Name"
            android:textSize="@dimen/topic_item_ts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black_900"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="16dp"
            android:id="@+id/topic_name_item"
            android:layout_toStartOf="@+id/points_topic_item"
            android:layout_toLeftOf="@+id/points_topic_item" />

        <TextView
            android:text="758"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/topic_item_ts"
            android:gravity="center"
            android:textColor="@color/pink900"
            android:layout_alignTop="@+id/topic_name_item"
            android:layout_marginRight="16dp"
            android:id="@+id/points_topic_item"
            android:layout_alignBottom="@+id/topic_name_item"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>