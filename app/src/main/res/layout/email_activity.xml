<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:id="@+id/welcom_image"
        android:layout_height="match_parent" />

    <RelativeLayout android:layout_width="match_parent"

        android:layout_height="match_parent">

        <ImageView

            android:layout_width="48dp"
            android:layout_height="48dp"

            app:srcCompat = "@drawable/ic_next"
            android:visibility="visible"
            android:layout_marginBottom="45dp"
            android:id="@+id/email_next_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:hint="@string/email_text"
            android:layout_height="50dp"
            android:visibility="visible"
            android:inputType="textEmailAddress"
            android:textColor="@color/black_900"
            android:textColorHint="@color/black_900"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@drawable/email_editetext_back"
            android:gravity="center"
            android:id="@+id/email_text"
            android:layout_above="@+id/email_next_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/email_activity_edittext" />

        <com.elf.elfstudent.CustomUI.HelviticaLight
            android:text="Already have an Account ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible"
            android:layout_above="@+id/email_next_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp"
            android:id="@+id/sign_in_text" />

    </RelativeLayout>

</FrameLayout>