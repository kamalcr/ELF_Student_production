<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <com.elf.elfstudent.CustomUI.HelviticaMedium
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"

            android:text="Welcome"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/email_welcome_text"
            android:layout_marginTop="40dp" />

    <com.elf.elfstudent.CustomUI.HelviticaLight
        android:text="Let's set you up quickly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="22sp"
        android:id="@+id/textView"
        android:layout_below="@+id/email_welcome_text"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:hint="@string/email_text"
        android:layout_height="60dp"
        android:background="@null"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:layout_marginBottom="173dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/email_text" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        android:id="@+id/email_next_button" />

</RelativeLayout>

