<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black_900"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.elf.elfstudent.CustomUI.HelviticaLight
        android:text="Subscribe Subjects"
        android:layout_width="wrap_content"
        android:textSize="22sp"

        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/subscribe_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

    <com.elf.elfstudent.CustomUI.HelviticaMedium
        android:text="SKIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/cardview_light_background"

        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:id="@+id/skip_text"
        android:layout_marginTop="9dp"
        android:layout_alignTop="@+id/subscribe_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="NEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/subscribe_text"
        android:layout_alignStart="@+id/subscribe_text"
        android:layout_marginBottom="21dp"
        android:id="@+id/nextbutton"
        android:layout_alignRight="@+id/skip_text"
        android:layout_alignEnd="@+id/skip_text" />
</RelativeLayout>