<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black_viewpager"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="@dimen/nointrnt_img_hight"
        app:srcCompat="@drawable/ic_cloud_off_white_24px"
        android:id="@+id/imageView3"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:text="Please Make sure you have active Internet Connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/textView26"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/white"
        android:textSize="@dimen/nointernet_txt26" />

    <com.elf.elfstudent.CustomUI.HelviticaLight
        android:text="NO INTERNET"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/nointernet_txt26"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>