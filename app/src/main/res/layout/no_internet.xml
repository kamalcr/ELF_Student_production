<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black_viewpager"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <Button
            android:text="Open Settings"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_internet_button"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/internet_text_2"
            android:layout_centerHorizontal="true" />

    <com.elf.elfstudent.CustomUI.HelviticaLight
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginTop="8dp"
        android:id="@+id/internet_text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cloud"
        android:layout_centerHorizontal="true" />

    <ImageView

        app:srcCompat="@drawable/no_internet_"
        android:id="@+id/cloud"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

