<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/login_background_gradient"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:hint="Phone Number"
        android:layout_gravity="center"
      android:layout_below="@+id/forgot_email_text"
        android:id="@+id/fp_phone_ted"
        android:gravity="center"

        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_alignLeft="@+id/forgot_email_text"
        android:layout_alignStart="@+id/forgot_email_text">
        <EditText
            android:layout_width="match_parent"

            android:layout_height="60dp" />
    </android.support.design.widget.TextInputLayout>

    <com.elf.elfstudent.CustomUI.QucikSand
        android:text="Email Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgot_phone_text"
        android:layout_below="@+id/fp_phone_ted"
        android:layout_alignLeft="@+id/forgot_email_text"
        android:layout_alignStart="@+id/forgot_email_text"
        android:textColor="@color/pink900"

        android:textSize="@dimen/p_ts"

        android:layout_marginTop="48dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:hint="Email"
        android:layout_gravity="center"
        android:layout_below="@+id/forgot_phone_text"
        android:id="@+id/forgot_email_ted"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_alignLeft="@+id/forgot_email_text"
        android:layout_alignStart="@+id/forgot_email_text">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    </android.support.design.widget.TextInputLayout>

    <com.elf.elfstudent.CustomUI.HelviticaLight
        android:text="@string/forgot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgot_title"
        android:layout_centerHorizontal="true"
         android:textColor="@color/black_900"
        android:layout_marginTop="@dimen/forgot_mtop"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/forgot_email_text"
        android:layout_alignStart="@+id/forgot_email_text"
        android:textSize="@dimen/forgot_ts"
        android:layout_alignRight="@+id/fp_phone_ted"
        android:layout_alignEnd="@+id/fp_phone_ted" />

    <com.elf.elfstudent.CustomUI.QucikSand
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pink900"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:id="@+id/forgot_email_text"
        android:textSize="@dimen/p_ts"
        android:layout_below="@+id/forgot_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <Button
        android:text="Change Password"
        android:background="@drawable/pink_login_rounded"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/check_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/p_bt"
        android:layout_alignLeft="@+id/forgot_email_ted"
        android:layout_alignStart="@+id/forgot_email_ted"
        android:layout_alignRight="@+id/forgot_email_ted"
        android:layout_alignEnd="@+id/forgot_email_ted" />
</RelativeLayout>