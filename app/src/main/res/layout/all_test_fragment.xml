<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:id="@+id/changable_test_view_root"
            android:layout_height="match_parent">
            <include layout="@layout/loading_list"/>

        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/top_view_layout"
            android:visibility="visible"
            android:layout_height="match_parent">
            <com.elf.elfstudent.CustomUI.QucikSand
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black_900"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/all_science_text"
                android:text="@string/social"
                android:textSize="@dimen/all_test_tz"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />


            <com.elf.elfstudent.CustomUI.QucikSand
                android:layout_width="match_parent"
                android:layout_below="@+id/all_sci_list"
                android:layout_height="wrap_content"
                android:textColor="@color/black_900"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/all_social_text"
                android:text="SCIENCE"
                android:textSize="@dimen/all_test_tz"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <com.elf.elfstudent.CustomUI.QucikSand
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black_900"
                android:layout_below="@+id/all_social_list"
                android:id="@+id/all_maths_tex"
                android:textSize="@dimen/all_test_tz"
                android:text="MATHS"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />


            <android.support.v7.widget.RecyclerView

                android:layout_width="wrap_content"
                android:paddingTop="16dp"
                android:layout_marginTop="@dimen/test_card_mtop"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/all_social_list"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_below="@+id/all_social_text"
                android:layout_alignStart="@+id/all_maths_tex"
                android:layout_marginLeft="16dp"
                android:layout_alignLeft="@+id/all_maths_tex" />

            <android.support.v7.widget.RecyclerView

                android:layout_width="wrap_content"
                android:paddingTop="16dp"
                android:layout_marginTop="@dimen/test_card_mtop"
                android:layout_marginLeft="16dp"
                android:id="@+id/all_sci_list"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_below="@+id/all_science_text"
                android:layout_alignStart="@+id/all_social_text"
                android:layout_alignLeft="@+id/all_social_text" />

            <android.support.v7.widget.RecyclerView

                android:layout_width="wrap_content"

                android:layout_below="@id/all_maths_tex"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_marginTop="@dimen/test_card_mtop"
                android:id="@+id/all_math_list"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_alignStart="@+id/all_social_list"
                android:layout_alignLeft="@+id/all_social_list"
                android:layout_marginBottom="40dp" />
        </RelativeLayout>

    </FrameLayout>



</ScrollView>
