<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_collapseMode="parallax"
    android:background="@drawable/login_background_gradient"
    android:layout_below="@+id/elf_toolbar"
    android:id="@+id/home_profile_container"

    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_write_board"
            android:backgroundTint="@color/material_black"
            android:id="@+id/imageView2"
            android:layout_below="@+id/home_student_name"
            android:layout_alignLeft="@+id/home_student_name"
            android:layout_alignStart="@+id/home_student_name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp" />

        <com.elf.elfstudent.CustomUI.HelviticaLight
            android:text="Student Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_student_name"
            android:layout_alignTop="@+id/home_profile_imageview"
            android:layout_toRightOf="@+id/home_profile_imageview"
            android:layout_toEndOf="@+id/home_profile_imageview"
            android:textColor="@color/black_dribble" />

        <com.elf.elfstudent.CustomUI.HelviticaLight
            android:text="Section Name"
            android:textSize="16sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_section_name"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_below="@+id/home_student_name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/black_dribble" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_kindergarten"
            android:backgroundTint="@color/material_black"
            android:layout_below="@+id/imageView2"
            android:layout_toRightOf="@+id/home_profile_imageview"
            android:id="@+id/imageView8"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="2dp" />

        <com.elf.elfstudent.CustomUI.RoundedImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/pro_pic"
            android:id="@+id/home_profile_imageview"
            android:layout_marginTop="14dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    <com.elf.elfstudent.CustomUI.HelviticaLight
        android:text="Sri Akilandeswari Vidhyala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="4dp"
        android:textSize="14sp"
        android:id="@+id/home_school_name"
        android:layout_alignTop="@+id/imageView8"
        android:layout_alignLeft="@+id/home_section_name"
        android:layout_alignStart="@+id/home_section_name"
        android:layout_alignBottom="@+id/home_profile_imageview"
        android:textColor="@color/black_viewpager" />


    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_below="@+id/home_profile_imageview"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <!--State Rank-->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="4dp"
            app:cardBackgroundColor="@color/material_blue100"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.elf.elfstudent.CustomUI.QucikSand
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_indigo700"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Overall rank"
                    android:layout_below="@+id/home_o_img"
                    android:layout_marginTop="8dp"
                    android:id="@+id/home_overall_rank_text"
                    android:layout_centerHorizontal="true"
                  />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_globe_ih_24"
                    android:layout_marginTop="6dp"
                    android:id="@+id/home_o_img"

                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_below="@id/home_overall_rank_text"
                    android:text="-"
                    android:textColor="@color/material_black"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/home_overall_rank_value"
                    android:layout_centerHorizontal="true"

                    android:layout_height="wrap_content" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!--OVerall-->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="4dp"
            app:cardBackgroundColor="@color/material_pink100"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_cup_i"
                    android:layout_marginTop="6dp"
                    android:id="@+id/home_state_img"

                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/home_state_text"
                    android:text="-"
                    android:textColor="@color/material_black"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/home_state_value"
                    android:layout_centerHorizontal="true"

                    android:layout_height="wrap_content" />

                <com.elf.elfstudent.CustomUI.QucikSand
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_pink800"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="State rank"
                    android:id="@+id/home_state_text"
                    android:layout_below="@+id/home_state_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!--District-->
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="4dp"
            app:cardBackgroundColor="@color/material_purple50"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_shield_ih"

                    android:id="@+id/home_dist_img"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/home_district_text"
                    android:text="-"
                    android:textColor="@color/material_black"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/home_dist_rank_value"
                    android:layout_centerHorizontal="true"

                    android:layout_height="wrap_content" />

                <com.elf.elfstudent.CustomUI.QucikSand
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_purple500"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="District Rank"
                    android:id="@+id/home_district_text"
                    android:layout_below="@+id/home_dist_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>





    </RelativeLayout>



